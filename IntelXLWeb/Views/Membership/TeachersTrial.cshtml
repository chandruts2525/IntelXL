    }

    .txt-trial-offer {
        padding: 0;
        color:white;
    }

    .form-control:focus {
        box-shadow: none;
    }
    .blue-form .sec-contact-info-fields {
        padding-top: 30px;
    }

    .blue-form .sec-form {
        padding-left: 50px;
        padding-right: 50px;
    }

    .blue-form .sec-form-bd {
        padding-bottom: 0;
        padding-top: 20px;
    }

    .sec-form.sec-form-ftr {
        color: #fff;
        background: linear-gradient(90deg,#4c6fa2 0,#4b8db4 50%,#04749e 100%);
        font-size: 14px;
        padding: 15px;
    }

        .sec-form.sec-form-ftr p {
            margin-bottom: 0;
        }

    .info-cta-btn {
        border-radius: 5px;
        border: none;
        color: #fff;
        cursor: pointer;
        display: inline-block;
        font-family: Verdana,sans-serif;
        min-width: 140px;
        padding: 0 15px;
        text-align: center;
        text-decoration: none;
        transition: .2s all ease-in-out;
        box-sizing: border-box;
        background-color: #52b700;
    }

    .info-cta-33-15 {
        font-size: 15px;
        height: 33px;
        line-height: 33px;
    }

    .listing-contact-info p :nth-child(1) {
        text-align: end;
    }

    .listing-contact-info .col-sm-6 {
        text-align: start;
    }

    @@media (max-width : 576px) {
