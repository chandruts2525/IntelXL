@section Scripts{
    <script>
        $(document).on("click", ".no_auth_join,.auth_join", function (event) {
            var clickedClassName = event.target.className;
            if ($(event.target).hasClass("auth_join")) {
                window.location.href = "/Membership/Join";               
            } else {               
                $("#LoginModal").modal("show");
                $(".error-msg").text("To continue you must login");
                CurrentPath = "/Membership/Join";
            }
        });
        
    </script>
}
