@{
    ViewData["Title"] = "Membership";
}
@{
    var joinbtnClass = "no_auth_join";
    if (User.Identity.IsAuthenticated)
    {
        joinbtnClass = "auth_join";
    }
}
<style>
    .members-section {
        background-image: url('/images/card-banner.png');
        object-fit: fill;
        background-position: center center;
        background-repeat: no-repeat;
        margin: 0;
        padding: 0;
        width: 100%;
    }

    .members-content {
        padding: 20px;
        padding-bottom: inherit;
        box-sizing: border-box;
        margin: 0 auto;
        max-width: 1040px;
        min-width: 320px;
        width: 100%;
    }

    .font-weight-normal {
        font-weight: 400;
    }

    .circle-separator {
        display: inline-block;
        width: 4px;
        height: 4px;
        border-radius: 50%;
        background: #fff;
        margin: 0 8px 2px;
    }

    .vertical-separator {
        width: 1px;
        height: 11px;
        margin: 0 12px;
        background: #fff;
    }

    .subheader-grades, .header-section .vertical-separator {
        display: inline-block;
    }

    .fta-card-container {
    }

        .fta-card-container .fta-card {
        }

    .fta-card {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 5px 10px 0 rgba(0,0,0,.19);
        box-sizing: border-box;
        margin: 0 auto 30px auto;
        max-width: 300px;
        padding: 12px 10px;
        width: 100%;
        height: 317px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .fta-bg-lk {
        background-color: transparent;
        font-size: 0;
        height: 100%;
        left: 0;
        line-height: 0;
        position: absolute;
        top: 0;
        width: 100%;
    }

    .fta-title {
        font-size: 24px;
        margin-bottom: 10px;
        text-align: center;
    }

    .fta-icon-container {
        height: 130px;
        margin-bottom: 10px;
    }

    .fta-btn-container:not(.tallest-btn-container) {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-evenly;
    }

    .fta-card .fta-btn-container {
        flex: 1 0 auto;
        z-index: 1;
        width: 100%;
    }

    .fta-btn-container .cta-btn {
        display: block;
        height: 33px;
        line-height: 31px;
        max-width: 215px;
        width: 100%;
        margin: 0 auto;
    }

    .cta-btn {
        border-radius: 5px;
        box-sizing: border-box;
        cursor: pointer;
        display: inline-block;
        font: normal 15px Verdana,sans-serif;
        height: 33px;
        line-height: 32px;
        min-width: 140px;
        padding: 0 10px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
    }

    .cta-style-solid-crisp-green {
        color: #fff;
        background-color: #52b700;
    }

        .cta-style-solid-crisp-green:hover {
            background-image: linear-gradient(to right, #3e8703,#52b700, #3e8703 );
            color: #fff;
        }

    .cta-style-hollow-crisp-green-tall {
        background-color: #fff;
        color: #000;
        border: 1px solid #52b700;
    }

    .cta-style-solid-teal {
        color: #fff;
        background-color: #4fd7c0;
    }

        .cta-style-solid-teal:hover {
            color: #fff;
            background-image: linear-gradient(to right, #3bad9a,#4fd7c0, #3bad9a );
        }

    .cta-style-border-teal {
        background-color: #fff;
        color: #000;
        border: 1px solid #4fd7c0;
    }

    .cta-style-solid-blue {
        color: #fff;
        background-color: #00aaef;
    }

        .cta-style-solid-blue:hover {
            color: #fff;
            background-image: linear-gradient(to right, #068dc4,#00aaef, #068dc4 );
        }

    .cta-style-border-blue {
        background-color: #fff;
        color: #000;
        border: 1px solid #00aaef;
    }

    @@media screen and (min-width: 1014px) {
        .header-section h3 {
            font-size: 17px;
        }
    }

    @@media screen and (min-width: 661px) {
        .header-section h3 {
            margin-bottom: 20px;
        }
    }


    .header-section h3 {
        margin-bottom: 20px;
    }

    .members-content-awards {
        text-align: center;
        max-width: 100%;
    }

    .memb-awards-container {
        padding: 20px;
        box-sizing: border-box;
        margin: 0 auto;
        max-width: 1040px;
        min-width: 320px;
        width: 100%;
    }

    .codie {
        width: 200px;
    }

    .memb-award-container {
        display: inline-block;
        margin: 10px;
        padding: 5px;
    }

        .memb-award-container img {
            width: 150px;
            height: auto;
        }

    .empty-spacer {
        width: 150px;
    }

    @@media (max-width: 940px) {
        .empty-spacer {
            width: auto;
        }
    }

    @@media (max-width: 750px) {
        .empty-spacer {
            display: inline-block;
        }
    }

    @@media (max-width: 576px) {
        .empty-spacer {
            width: auto;
        }

        .memb-award-container img {
            width: 100px;
            height: auto;
        }

        .footer-fta-section {
            flex-direction: column;
            align-items: center;
        }

        .footer-fta-lk {
            font-size: 14px;
            margin: 10px 0;
        }

        .footer-fta-splitter {
            display: inline-block;
        }

        .footer-fta-section .members-content-footer {
            flex-direction: column;
            align-items: flex-start;
        }

        .footer-fta-lk {
            width: 100%;
            font-size: 16px;
        }
    }

    .personal-quote-text {
        font-size: 25px;
    }

    .personal-quote-author {
        font-size: 18px;
    }

    .personal-quote-location {
        font-size: 18px;
    }

    .members-content-quote,
    .members-content-footer {
        padding: 20px;
        box-sizing: border-box;
        margin: 0 auto;
        max-width: 1040px;
        min-width: 320px;
        width: 100%;
    }

    .footer-fta-section .members-content-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .fta-lk-family {
        color: #52b700;
    }

    .fta-lk-teacher {
        color: #4fd7c0;
    }

    .fta-lk-admin {
        color: #00aaef;
    }

</style>
